<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.GameFragment"
    android:padding="2dp">

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:textSize="22dp"
        android:textColor="#c0c0c0"
        />
    <TextView
        android:id="@+id/tv_sum"
        android:layout_width="100dp"
        android:gravity="center"
        android:layout_height="100dp"
        android:background="@drawable/shape_circle"
        android:layout_marginTop="170dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_timer"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />
    <TextView
        android:id="@+id/tv_num_left"
        android:layout_width="75dp"
        android:gravity="center"
        android:layout_height="75dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_rectangle_blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_sum"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:layout_margin="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@+id/tv_num_right"
        />
    <TextView
        android:id="@+id/tv_num_right"
        android:layout_width="75dp"
        android:gravity="center"
        android:layout_height="75dp"
        android:layout_marginTop="6dp"
        android:layout_margin="7dp"
        android:background="@drawable/shape_rectangle_blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_num_left"

        android:text=""
        android:textColor="@color/white"
        android:textSize="40dp"
        />
    <TextView
        android:id="@+id/tv_correct_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/progress_answers"
        app:layout_constraintTop_toBottomOf="@+id/tv_num_left"
        android:layout_marginTop="30dp"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_correct_answers"/>
    <TextView
        android:id="@+id/tv_option_six"
        style="@style/OptionStyle"
        android:background="#01befe"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_option_five"
        app:layout_constraintHorizontal_chainStyle="spread"/>
    <TextView
        android:id="@+id/tv_option_five"
        style="@style/OptionStyle"
        android:background="#ffdd00"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_option_four"
        app:layout_constraintEnd_toStartOf="@+id/tv_option_six"
        />
    <TextView
        android:id="@+id/tv_option_four"
        style="@style/OptionStyle"
        android:background="#ff7d00"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_option_five"
        />
    <TextView
        android:id="@+id/tv_option_three"
        style="@style/OptionStyle"
        android:text="3"
        android:background="#ff006d"
        app:layout_constraintBottom_toTopOf="@+id/tv_option_six"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_option_two"
        app:layout_constraintHorizontal_chainStyle="spread"
        />
    <TextView
        android:id="@+id/tv_option_two"
        style="@style/OptionStyle"
        android:text="2"
        android:background="#0000ff"
        app:layout_constraintBottom_toTopOf="@+id/tv_option_six"
        app:layout_constraintEnd_toStartOf="@id/tv_option_three"
        app:layout_constraintStart_toEndOf="@+id/tv_option_one"
        />
    <TextView
        android:id="@+id/tv_option_one"
        style="@style/OptionStyle"
        android:text="1"
        android:background="#8f00ff"
        app:layout_constraintBottom_toTopOf="@+id/tv_option_four"
        app:layout_constraintEnd_toStartOf="@+id/tv_option_two"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>